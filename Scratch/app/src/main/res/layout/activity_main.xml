<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/help"
        android:layout_alignParentEnd="true"
        android:onClick="help"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_help_outline_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/garamond_bold_font"
        android:text="Help"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:onClick="move"
        android:layout_margin="5dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_baseline_play_arrow_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/garamond_bold_font"
        android:text="Play"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"
        android:layout_toEndOf="@id/home"
        android:onClick="clear"
        android:src="@drawable/ic_baseline_clear_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel"
        android:layout_toEndOf="@id/home"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/garamond_bold_font"
        android:text="Clear"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mute"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button"
        android:layout_toEndOf="@id/cancel"
        android:onClick="mute"
        android:src="@drawable/ic_baseline_music_note_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel"
        android:layout_toEndOf="@id/cancel"
        android:textSize="18sp"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/garamond_bold_font"
        android:text="Sound"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_marginStart="30dp"
        android:id="@+id/lbg"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_edit"
            android:onClick="chng_to_farm"
            android:scaleType="fitXY"
            android:src="@drawable/farm" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_edit"
            android:onClick="chg_to_city"
            android:scaleType="fitXY"
            android:src="@drawable/city" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@drawable/round_edit"
            android:onClick="chg_to_land"
            android:layout_marginEnd="10dp"
            android:src="@drawable/land"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:id="@+id/gameboard"
        android:background="@color/colorAccent"
       android:layout_centerVertical="true"
        android:layout_toEndOf="@id/lact">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/img"
           android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/girl"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lbg"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:text="Girl"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="chg_to_cat"
                android:src="@drawable/girl"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:text="Boy"/>
             <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:onClick="chng_to_boy"
            android:src="@drawable/boy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:text="Girl"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"

                android:layout_marginEnd="10dp"
                android:onClick="chng_to_dogo"
                android:src="@drawable/dogo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:text="Pengiun"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="chng_to_peng"
                android:src="@drawable/penguin"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/home"
        android:id="@+id/lact"
        android:layout_margin="10dp"
       android:layout_above="@+id/recyler"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/l_up"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/right"
                android:onClick="add_right"
                android:src="@drawable/ic_baseline_arrow_forward_24"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content"
    android:fontFamily="@font/garamond_bold_font"
    android:text="Right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/l_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="Left"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/left"
                android:hapticFeedbackEnabled="true"
                android:onClick="add_left"
                android:src="@drawable/ic_baseline_arrow_back_24"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/l_left"
            android:id="@+id/l_up"
           android:layout_toEndOf="@id/l_left"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:text="Up"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/down"
                android:onClick="add_up"
                android:src="@drawable/ic_baseline_arrow_upward_24"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/l_left"
            android:layout_toEndOf="@id/l_left"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/up"
                android:onClick="add_down"
                android:src="@drawable/ic_baseline_arrow_downward_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/garamond_regular"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="Down"/>

        </LinearLayout>


    </RelativeLayout>
   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:id="@+id/recyler"
       android:layout_height="match_parent"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
       android:background="@color/colorPrimary"
       android:layout_below="@+id/gameboard"/>





</RelativeLayout>